\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{my-subtitle}[Subtitle]

\RequirePackage{titling}

% Define a subtitle command
\newcommand{\subtitle}[1]{\gdef\theSubtitle{#1}}
\newcommand{\theSubtitle}{} % Default empty

% Redefine maketitle to include subtitle

\setlength{\droptitle}{-5em} % move title up (optional)
\setlength{\parindent}{0pt}

\renewcommand{\maketitlehooka}{} % removes extra pre-title space
\renewcommand{\maketitlehookb}{} % removes extra post-title space

\pretitle{\begin{center}\LARGE}
\posttitle{\end{center}\vspace{-1.5em}\begin{center}\normalfont\Large\theSubtitle\end{center}\vspace{-5em}}

\preauthor{\begin{center}\large}
\postauthor{\par\end{center}}

\predate{\begin{center}\small}
\postdate{\par\end{center}}
